<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonia="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls"
        xmlns:c="using:Launcher.Converters"
        xmlns:m="using:Launcher.Models"
        xmlns:vm="using:Launcher.ViewModels"
        x:Class="Launcher.Views.Settings"
        x:DataType="vm:Settings"
        Icon="/App.ico" Width="400" Height="280"
        WindowStartupLocation="CenterScreen"
        Title="{StaticResource Text.Settings}" Background="{StaticResource Color.Window}">
    <TabControl>
        <TabItem Header="{StaticResource Text.Settings}">
            <StackPanel Margin="10" Spacing="5">
                <Grid RowDefinitions="30,30,40,40" ColumnDefinitions="Auto,*">
                    <CheckBox Grid.Row="0" Grid.ColumnSpan="2" Content="{StaticResource Text.Settings.General.DiscordActivity}" IsChecked="{Binding DiscordActivity, Mode=TwoWay}" />
                    <CheckBox Grid.Row="1" Grid.ColumnSpan="2" Content="{StaticResource Text.Settings.General.ParallelDownload}" IsChecked="{Binding ParallelDownload, Mode=TwoWay}" />

                    <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontSize="13" Text="Threads:"/>
                    <avalonia:NumericUpDown Grid.Row="2" Grid.Column="1" Margin="5,8,0,0" Minimum="2" Maximum="10" Value="{Binding DownloadThreads, Mode=TwoWay}" Width="120" HorizontalAlignment="Left"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontSize="13" Text="Language:"/>
                    <ComboBox Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" Width="120" ItemsSource="{Binding Source={x:Static m:Locale.Supported}}" DisplayMemberBinding="{Binding Name, x:DataType=m:Locale}" SelectedItem="{Binding Locale, Mode=TwoWay, Converter={x:Static c:StringConverter.ToLocale}}" />
                </Grid>

                <Separator Margin="0,10" IsVisible="{Binding IsLinux}"/>

                <Button Content="Full Uninstall (Remove All Data)"
                        Command="{Binding FullUninstallCommand}"
                        IsVisible="{Binding IsLinux}"
                        HorizontalAlignment="Center"
                        Background="#441111"
                        Foreground="#FF6666"
                        Padding="10,5"
                        Margin="0,5,0,0"
                        ToolTip.Tip="Removes AppImage, Shortcuts, and Game Data" />
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
